{
  "name": "code-explorer-pro",
  "displayName": "Code Explorer Pro",
  "description": "Recursive reference search for VS Code",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "migratesky",
  "repository": "https://github.com/migratesky/vscode-code-explorer-pro",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-explorer-pro.findRecursiveReferences"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-explorer-pro.findRecursiveReferences",
        "title": "Find Recursive References"
      }
    ],
    "keybindings": [
      {
        "command": "code-explorer-pro.findRecursiveReferences",
        "key": "ctrl+shift+space",
        "mac": "ctrl+shift+space",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codeExplorerProReferences",
          "name": "References"
        }
      ]
    },
    "configuration": {
      "title": "Code Explorer Pro",
      "properties": {
        "codeExplorerPro.includeGlob": {
          "type": "string",
          "default": "**/*",
          "description": "Glob of files to include when scanning for references."
        },
        "codeExplorerPro.excludeFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["jar", "war", "zip", "tar", "gz", "bz2", "7z", "rar", "iso", "dmg", "exe", "msi", "app", "pkg", "deb", "rpm", "apk", "ipa", "xpi", "class"],
          "description": "List of file extensions to exclude from scanning."
        },
        "codeExplorerPro.excludeGlob": {
          "type": "string",
          "default1": "**/**jar,**/**.jar,**/**war,**/**zip,**/**tar,**/**gz,**/**bz2,**/**7z,**/**rar,**/**iso,**/**dmg,**/**exe,**/**msi,**/**app,**/**pkg,**/**deb,**/**rpm,**/**apk,**/**ipa,**/**xpi,**/**class,**/target/**/classes/**,**/node_modules/**,**/dist/**,**/out/**,**/build/**,**/.git/**,**/.venv/**,**/venv/**,**/.tox/**,**/.cache/**,**/.mypy_cache/**",
          "default": "**/target/**/classes/**,**/node_modules/**,**/dist/**,**/out/**,**/build/**,**/.git/**,**/.venv/**,**/venv/**,**/.tox/**,**/.cache/**,**/.mypy_cache/**",
          "default2": "**/*.jar,**/*.txt",
          "description": "Glob of files/folders to exclude from scanning."
        },
        "codeExplorerPro.maxFiles": {
          "type": "number",
          "default": 50000,
          "minimum": 1,
          "description": "Maximum number of files to scan per search."
        },
        "codeExplorerPro.maxLinesPerFile": {
          "type": "number",
          "default": 10000,
          "minimum": 1,
          "description": "Maximum number of lines to scan per file."
        },
        "codeExplorerPro.progressEvery": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Log scan progress every N files."
        },
        "codeExplorerPro.maxSearchMs": {
          "type": "number",
          "default": 15000,
          "minimum": 1000,
          "description": "Abort scan after this many milliseconds (partial results are returned)."
        },
        "codeExplorerPro.verboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Log per-file summaries even if there were 0 hits."
        },
        "codeExplorerPro.matchMode": {
          "type": "string",
          "enum": ["text", "word"],
          "default": "text",
          "description": "How to match occurrences: raw text substring or identifier-bounded word."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts || true",
    "test": "node ./out/test/runTest.js",
    "test:unit": "npm run compile && mocha out/unit/**/*.test.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/node": "^20.0.0",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "@vscode/test-electron": "^2.4.0",
    "typescript": "^5.3.3"
  }
}
